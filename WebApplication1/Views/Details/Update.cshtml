@model Person
@{
    ViewData["Title"] = "Update";
}

<div>
    <h2>update person info</h2>

    <form class="needs-validation" style="max-width:400px" asp-controller="Details" asp-action="Update" method="post">
        <div class="form-group">
            <label asp-for="Name">Name</label>
            <input id="test" class="form-control" asp-for="Name" />
            <span class="text-danger" asp-validation-for="Name"></span>
        </div>
        <div class="form-group">
            <label asp-for="Age">Age</label>
            <input class="form-control " asp-for="Age" />
            <span class="text-danger" asp-validation-for="Age"></span>
        </div>
        <div class="form-group">
            <label asp-for="Sector">Sector</label>
            <select class="form-control" asp-for="Sector" asp-items="Html.GetEnumSelectList<Sector>()">
                <option selected="selected" value="">Please select</option>
            </select>
            <span class="text-danger" asp-validation-for="Sector"></span>
        </div>
        <button type="submit" class="btn btn-lg btn-primary">Update</button>
        <input hidden asp-for="FileName" />
        <input hidden asp-for="ID" />
    </form>
</div>

