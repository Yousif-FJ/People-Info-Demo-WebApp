@model AddPerson
@{
    ViewData["Title"] = "Add";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <div class="container">
        <h2>Add new person</h2>
        <form class="needs-validation" style="max-width:400px" enctype="multipart/form-data" asp-controller="Home" asp-action="Add" method="post">
            <div class="form-group">
                <label asp-for="Person.Name">Name</label>
                <input class="form-control" asp-for="Person.Name" />
                <span class="text-danger" asp-validation-for="Person.Name"></span>
            </div>
            <div  class="form-group">
                <label asp-for="Person.Age">Age</label>
                <input class="form-control " asp-for="Person.Age" />
                <span class="text-danger" asp-validation-for="Person.Age"></span>
            </div>
            <div class="form-group">
                <label asp-for="Person.Sector">Sector</label>
                <select class="form-control" asp-for="Person.Sector" asp-items="Html.GetEnumSelectList<Sector>()" >
                    <option selected="selected" value="">Please select</option>
                </select>
                <span class="text-danger" asp-validation-for="Person.Sector"></span>
            </div>
            <div class="form-group">
                <label asp-for="Picture">Chose file</label><br />
                <input asp-for="Picture" />
                <span></span>
            </div>

                <button type="submit" class="btn btn-lg btn-primary">Add</button>

</form>
    </div>
